linters: linters_with_defaults(
    line_length_linter(120),
    commented_code_linter = NULL,
    indentation_linter(indent = 4),
    quotes_linter(delimiter = c("\"")),
    object_usage_linter(interpret_glue = FALSE, skip_with = FALSE)
  )
exclusions: list(
    "__LEGACY__",
    ".github",
    "data",
    "docs",
    "notebooks",
    "output",
    "python",
    "renv",
    "src"
  )

